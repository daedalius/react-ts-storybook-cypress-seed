{
  "name": "react-ts-storybook-cypress-seed",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:components:browser": "cypress run --browser chrome --config-file ./cypress/configs/components.json --config video=false",
    "test:components:ci": "cypress run --config-file ./cypress/configs/components.json",
    "test:e2e:browser": "cypress run --browser chrome --config-file ./cypress/configs/e2e.json --config video=false",
    "test:e2e:ci": "cypress run --config-file ./cypress/configs/e2e.json",
    "cypress": "cypress open",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook --output-dir ./dist/storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daedalius/react-ts-storybook-cypress-seed.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/daedalius/react-ts-storybook-cypress-seed/issues"
  },
  "homepage": "https://github.com/daedalius/react-ts-storybook-cypress-seed#readme",
  "dependencies": {
    "@babel/core": "7.14.5",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "7.14.5",
    "@babel/plugin-proposal-optional-chaining": "7.14.5",
    "@babel/plugin-transform-react-jsx": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "babel-loader": "8.2.2",
    "css-loader": "5.2.6",
    "file-loader": "6.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "style-loader": "2.0.0",
    "typescript": "4.3.2",
    "url-loader": "4.1.1",
    "webpack": "5.38.1",
    "webpack-cli": "4.7.2"
  },
  "devDependencies": {
    "@cypress/react": "5.9.1",
    "@cypress/webpack-preprocessor": "5.9.0",
    "@mdx-js/loader": "1.6.22",
